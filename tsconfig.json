{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",     
    "moduleResolution": "bundler", 
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.js",
    "**/*.test.js",
    "webpack.*.js",
    "__test__/**/*",
    "dist/**/*"
  ]
}