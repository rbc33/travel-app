{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.js",
    "**/*.test.js",
    "webpack.*.js",
    "__test__/**/*",
    "dist/**/*"  // Add this line to exclude the dist directory
  ]
}